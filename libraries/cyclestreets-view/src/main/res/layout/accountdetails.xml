<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="  "
		/>
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="To upload photos you must have a CycleStreets signin account."
		/>
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="  "
		/>
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="Registering for an account is free."
		/>		
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="  "
		/>
	<Button android:id="@+id/newaccount_button"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Register for an account"/>
	<Button android:id="@+id/existingaccount_button"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Signin with an existing account"/>
</LinearLayout>
