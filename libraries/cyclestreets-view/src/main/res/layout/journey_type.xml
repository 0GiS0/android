<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginLeft="2.0dip"
  android:layout_marginTop="1.0dip"
  android:layout_marginRight="4.0dip"
  android:layout_marginBottom="5.0dip">
  <RadioGroup
      android:id="@+id/routeTypeGroup"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1.0">
    <RadioButton
        android:id="@+id/routeQuietest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/route_quiet"
        android:button="@drawable/empty"/>
    <RadioButton
        android:id="@+id/routeBalanced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/route_balanced"
        android:button="@drawable/empty"
        android:layout_weight="1.0"/>
    <RadioButton
        android:id="@+id/routeFastest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/route_fast"
        android:button="@drawable/empty"
        android:layout_weight="1.0"/>
    <RadioButton
        android:id="@+id/routeShortest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/route_short"
        android:button="@drawable/empty"
        android:layout_weight="1.0"/>
  </RadioGroup>
</LinearLayout>
